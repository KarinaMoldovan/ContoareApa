<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppContoare.FacturaListPage"
             Title="Facturile Disponibile">

    <!-- Adăugăm un Label pentru a arăta numărul de facturi -->
    <StackLayout Padding="10">
        <Label Text="{Binding Facturi.Count}" FontSize="20" HorizontalOptions="Center" VerticalOptions="Start" />

        <!-- Buton pentru navigarea către TarifePage -->
        <Button Text="Tarife" Clicked="OnTarifeButtonClicked" HorizontalOptions="Center" VerticalOptions="Start" />

        <!-- ListView-ul cu facturi -->
        <ListView x:Name="facturaListView" ItemsSource="{Binding Facturi}" ItemSelected="OnFacturaSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Suma}" Detail="{Binding DataEmitere}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>
